@{
    Layout = "_Layout";
    ViewData["Title"] = "Результаты поиска";
}

<h1>Результаты поиска</h1>

@if (Model.Count == 0)
{
    <p>Ничего не найдено.</p>
}
else
{
    <ul>
        @foreach (Phone phone in Model)
        {
            <li><a href="@Url.Action("Index", "Phone", new { id = phone.Id })">@phone.Name @phone.Model</a></li>
        }
    </ul>
}